
    <% @books.each do |book| %>
      <tr>
        <td><%= if current_user.is_admin then check_box_tag("book[]", book.id) end %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.description %></td>
        <td><%= book.related_series %></td>
        <td>
          <% if current_user.is_admin %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_book_path(book), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      book_path(book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      remote: true,
                      :class => 'btn btn-mini btn-danger' %>
          <% else %>
            <%= select_tag "lists", options_for_select(["Reading", "Wish", "Complete", "Ignore"]), prompt: "Put this on list..." %>
          <% end %>
        </td>
      </tr>
    <% end %>